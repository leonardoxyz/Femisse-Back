# =====================================================
# CONFIGURAÇÕES DO SERVIDOR
# =====================================================
NODE_ENV=development
PORT=4000

# =====================================================
# BANCO DE DADOS - SUPABASE
# =====================================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua_chave_anon_aqui
SUPABASE_SERVICE_KEY=sua_chave_service_aqui

# =====================================================
# AUTENTICAÇÃO JWT
# =====================================================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_min_32_caracteres
JWT_EXPIRES_IN=7d

# =====================================================
# CORS
# =====================================================
CORS_ORIGINS=http://localhost:5173,https://seu-dominio.vercel.app

# =====================================================
# FRONTEND URL
# =====================================================
FRONTEND_URL=http://localhost:5173

# =====================================================
# MERCADO PAGO
# =====================================================
MERCADO_PAGO_ACCESS_TOKEN=seu_access_token_aqui
MERCADO_PAGO_PUBLIC_KEY=sua_public_key_aqui

# =====================================================
# CLOUDFLARE TURNSTILE
# =====================================================
TURNSTILE_SECRET_KEY=sua_secret_key_aqui

# =====================================================
# MELHOR ENVIO API
# =====================================================
# Credenciais OAuth2
MELHORENVIO_CLIENT_ID=seu_client_id_aqui
MELHORENVIO_CLIENT_SECRET=seu_client_secret_aqui
MELHORENVIO_REDIRECT_URI=https://seu-dominio.com/api/shipping/auth/callback

# Ambiente (true para sandbox, false para produção)
MELHORENVIO_SANDBOX=false

# =====================================================
# REDIS (OPCIONAL - PARA CACHE)
# =====================================================
REDIS_URL=redis://localhost:6379
